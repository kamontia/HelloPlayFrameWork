
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# add routes
GET /sample1        controllers.SampleController.sample1
GET /sample2        controllers.SampleController.sample2
GET /sample3/:id    controllers.SampleController.sample3(id:Long)
GET /sample4/*path  controllers.SampleController.sample4(path)
GET /sample5  controllers.SampleController.sample5(fixedValued = "fixed")
GET /sample6  controllers.SampleController.sample6(defaultValue:Int ?=1)
GET /sample7  controllers.SampleController.sample7(optValue:Option[String])

GET /setSession    controllers.SessionController.setSession
GET /getSession    controllers.SessionController.getSession

GET /setFlash    controllers.SessionController.setFlash
GET /getFlash    controllers.SessionController.getFlash

GET /show        controllers.TemplateController.show()

#GET     /user/enrty controllers.UserController.entryInit
#POST    /user/enrty controllers.UserController.entrySubmit

GET /basicuser/index controllers.BasicUserController.index